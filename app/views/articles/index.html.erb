<%= form_with(url: search_results_path, method: :get, id: "search-form") do |form| %>
    <%= form.text_field :query, placeholder: "Search articles...", id: "search-input" %>
    <%= form.submit "Search", onclick: "openSearchResults(event)" %>
    <%= link_to "Search Trends", search_trends_path %>
    <%= link_to "View Search Results", search_results_path(query: params[:query]), target: "_blank", id: "view-results-link", style: "display: none;" %>
<% end %>
